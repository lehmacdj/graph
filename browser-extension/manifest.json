{
  "manifest_version": 2,
  "name": "Image URL Copier",
  "version": "1.0",
  "description": "Outline images on hover and copy their URLs with a button",
  
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/geometry.js",
        "utils/dom-utils.js",
        "core/image-detection.js",
        "ui/clipboard.js",
        "ui/menu.js",
        "core/event-handlers.js",
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}